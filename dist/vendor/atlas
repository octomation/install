#!/usr/bin/env bash

set -euo pipefail

@install-atlas() {
  local force=false version=v0.14.2

  local arg skip=false
  for arg in "${@}"; do
    if $skip; then
      skip=false
      continue
    fi
    case "${arg}" in
    -f | --force)
      force=true
      shift
      ;;
    --version)
      version="${2}"
      shift 2
      skip=true
      ;;
    esac
  done

  if command -v atlas >/dev/null && ! $force; then
    [[ $(atlas version | head -1 | awk '{print $4}') == "${version}" ]] && return
  fi

  local path=${1} src=https://atlasgo.sh
  curl -sSf ${src} | ATLAS_VERSION=${version} sh -s -- -y -o "${path}/atlas" --community --no-install
  chmod +x "${path}/atlas"
}

@install-atlas "${@}"
